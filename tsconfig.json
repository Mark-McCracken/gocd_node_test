{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "dist",
    "karma.conf.js"
  ]
}
